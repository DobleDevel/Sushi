@using Sushi.Models
@model Sushi.Models.MainViewModel
@{
    ViewBag.Title = "Главная";
}
<div class="content">
    <ul id="slides">
        <li class="slide showing">Slide 1</li>
        <li class="slide">Slide 2</li>
        <li class="slide">Slide 3</li>
        <li class="slide">Slide 4</li>
        <li class="slide">Slide 5</li>
    </ul>

    <div class="category">
        @foreach (Category category in Model.Categories)
        {
            <div class="item-category">
                <img src="upload/images/@category.category_image" alt="сеты">
                @Html.ActionLink(" ","Menu","Category",new { categoryId= category.categoryId },new { @class= "img-category" })
                <a><span class="name-category">@category.category_name</span></a>
            </div>
        }
    </div>
</div>

@section scripts {
    <script src="~/Scripts/slider.js"></script>
}